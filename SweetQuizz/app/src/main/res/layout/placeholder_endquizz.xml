<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_player"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left_title"
            android:text="Your results"
            android:textSize="@dimen/size_title"
            android:layout_marginLeft="120dp"
            android:textColor="@color/windowBackground"/>

        <FrameLayout
            android:id="@+id/timerfragment_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">
        </FrameLayout>

    </android.support.v7.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The quizz is over"
        android:layout_marginTop="150dp"
        android:id="@+id/resultTextView"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />



        <TextView
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:id="@+id/pourcentTextView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05"
            android:text="pourcentage"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="25dp"/>


    <com.criapp.circleprogresscustomview.CircleProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="150dp"
        android:layout_marginRight="7dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:colorProgress="@color/colorPrimary"
        app:shouldInit="false"
        app:startProgressPosition="-90"
        android:id="@+id/circleProgressBarResults"
        android:layout_gravity="center_horizontal" />


</LinearLayout>

